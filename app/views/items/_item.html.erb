<h1>ITEMS_partial</h1>

    <% @items.each do |itemm| %>
         
  <p>
    <% if (itemm.days_left == 7) %>
             <font color="gray"> 
               <%=  "#{itemm.name} has expired " %>
                                 | <%= link_to "Delete", [@item_del, itemm] , method: :delete, 
                                  data: { confirm: 'Are you sure you want to delete this list?' } %>   
              </font>
    <% else  %>
              <%= link_to itemm.name, edit_list_item_path(@list,itemm.id) %>
              | <%= link_to "Delete Item", [@item_del, itemm] , method: :delete, 
              data: { confirm: 'Are you sure you want to delete this list?' } %>       
              <%= link_to "", @item_del, method: :delete, class: 'glyphicon glyphicon-ok' %>
              | <%= (7-itemm.days_left ) %>  days left to do 
    <%  end %>
    
    
  </p>


<% end %>
<br/>
<br/>

<%=  link_to "Add Items To List", new_list_item_path(@list), class: 'btn btn-success' %>


